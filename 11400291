  <script>
    // simple SPA navigation
    const tabs = document.querySelectorAll('.nav button');
    function openSection(id){
      document.querySelectorAll('section.page').forEach(s=>s.classList.remove('active'));
      document.getElementById(id).classList.add('active');
      tabs.forEach(b=>b.classList.toggle('active', b.dataset.target===id));
      // focus top for better accessibility
      window.scrollTo({top:0,behavior:'smooth'});
    }
    tabs.forEach(b=>b.addEventListener('click',()=>openSection(b.dataset.target)));

    // small interactions
    function openPet(name){
      alert(name + " 的詳情範例。你可以把這裡改成 modal 或導向到獨立的詳情頁。")
    }
    function applyAdopt(name){
      const confirmed = confirm('你要申請領養 ' + name + ' 嗎？');
      if(confirmed){
        alert('已送出 ' + name + ' 的領養申請（範例）。');
      }
    }

    // keyboard navigation (left/right to switch)
    document.addEventListener('keydown', (e)=>{
      const order = ['home','adopt','shop','community','about'];
      let idx = order.findIndex(o=>document.getElementById(o).classList.contains('active'));
      if(e.key==='ArrowRight'){ idx = (idx+1)%order.length; openSection(order[idx]); }
      if(e.key==='ArrowLeft'){ idx = (idx-1+order.length)%order.length; openSection(order[idx]); }
    });
  </script>
